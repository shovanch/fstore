{
  "name": "markup-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for quick markup and design work for projects",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf css",
    "compile": "node-sass scss/main.scss css/style.comp.css",
    "prefix": "postcss -u autoprefixer --autoprefixer.browsers \"&gt; 5%, ie 9\" -r css/style.comp.css -o css/style.prefix.css",
    "compress": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile prefix compress",
    "watch:scss": "node-sass scss/main.scss css/style.css -w",
    "serve": "live-server",
    "start": "run-p watch:scss serve",
    "prod": "build:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shovanch/markup-boilerplate.git"
  },
  "author": "Shovan Chatterjee",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shovanch/markup-boilerplate/issues"
  },
  "homepage": "https://github.com/shovanch/markup-boilerplate#readme",
  "devDependencies": {
    "autoprefixer": "^9.6.4",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.18.2",
    "prettier-stylelint": "^0.4.2",
    "stylelint": "^11.1.1",
    "stylelint-config-idiomatic-order": "^7.0.3",
    "stylelint-config-prettier": "^6.0.0",
    "stylelint-config-recommended-scss": "^4.0.0",
    "stylelint-scss": "^3.11.1"
  }
}
